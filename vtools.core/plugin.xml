   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="com.vtools.core"
               label="VTools">
            <command
                  commandId="com.vtools.core.command.dbinfo"
                  id="com.vtools.core.command.DbInfoCommand"
                  label="DB INFO"
                  style="push">
            </command>
            <separator
                  name="VTools.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="com.vtools.core.command.templateManager"
                  id="com.vtools.core.command.TemplateManagerCommand"
                  label="Template Manager"
                  style="push">
            </command>
            <command
                  commandId="com.vtools.core.command.codeGenerate"
                  id="com.vtools.core.command.codeGenerate"
                  label="Code Generate"
                  style="push">
            </command>
         </menu>
         
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.vtools.core.command.DbInfoCommand"
            id="com.vtools.core.command.dbinfo"
            name="DB INFO">
      </command>
      <command
            defaultHandler="com.vtools.core.command.TemplateManagerCommand"
            id="com.vtools.core.command.templateManager"
            name="Template Manager">
      </command>
      <command
            defaultHandler="com.vtools.core.command.CodeGenerateCommand"
            id="com.vtools.core.command.codeGenerate"
            name="Code Generate">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.vtools.core.perspective.TemplatePerspective"
            icon="icons/codetemplate.gif"
            id="com.vtools.core.perspective.TemplatePerspective"
            name="模板管理">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="VToolsCore.views"
            class="com.vtools.core.views.CodeTemplateView"
            id="com.vtools.core.views.CodeTemplateView"
            name="VTools.CodeTemplateView"
            restorable="true">
      </view>
      <category
            id="VToolsCore.views"
            name="VTools">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="com.vtools.core.views.CodeTemplateView"
               minimized="false"
               ratio="0.20f"
               relationship="left"
               relative="com.vtools.core.views.CodeTemplateView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="VTools.CodeTemplateView.ActionSet"
            label="VTools.CodeTemplateView.ActionSet"
            visible="true">
         <action
               class="com.vtools.core.actions.RefreshAction"
               icon="src/com/vtools/core/views/refresh.gif"
               id="VTools.CodeTemplateView.ActionSet.Refresh"
               label="刷新"
               style="push"
               toolbarPath="additions"
               tooltip="刷新">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.vtools.core.editors.BasicEditorPart"
            default="false"
            id="com.vtools.core.editors.basiceditorpart"
            name="Template Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
         <category
            description="codetemplate view&apos;s commands"
            id="vtools.core.codetemplatecommands"
            name="vtools.core.codetemplatecommands">
	      </category>
       <command
             categoryId="vtools.core.codetemplatecommands"
             defaultHandler="com.vtools.core.commands.codetemplate.CreateHandler"
             description="create"
             id="vtools.core.codetemplatecommands.create"
             name="vtools.core.codetemplatecommands.create">
       </command>
	      <command
             categoryId="vtools.core.codetemplatecommands"
             defaultHandler="com.vtools.core.commands.codetemplate.RefreshHandler"
             description="refresh"
             id="vtools.core.codetemplatecommands.refresh"
             name="vtools.core.codetemplatecommands.refresh">
	      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:com.vtools.core.views.CodeTemplateView?after=additions">
         <command
               commandId="vtools.core.codetemplatecommands.create"
               label="%vtools.core.codetemplatecommands.create.menuname"
               style="push">
         </command>
         <separator
               name="vtools.core.codetemplate.menu.separator1"
               visible="true">
         </separator>
         <command
               commandId="vtools.core.codetemplatecommands.refresh"
               label="%vtools.core.codetemplatecommands.refresh.menuname"
               style="push">
         </command>
      </menuContribution>
   </extension>

</plugin>
